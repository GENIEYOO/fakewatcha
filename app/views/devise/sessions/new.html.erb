
<% stylesheet_link_tag "https://getbootstrap.com/docs/4.0/examples/signin/signin.css" %>
<h2><%= t(".sign_in") %></h2>
  <body>
<div class="container">


    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <h2 class="form-signin-heading">Please sign in</h2>
    <div class="form-inputs">
      <label for="inputEmail" class="sr-only">Email address</label>
          <%= f.text_field :email, required: true, autofocus: true, class: "form-control"%>
      <label for="inputPassword" class="sr-only">Password</label>
          <%= f.text_field :password, required: true, autofocus: true, class:"form-control" %>
          <%= f.text_field :remember_me, as: :boolean, class:"form-control" if devise_mapping.rememberable?  %>
    </div>


    <div class="checkbox">
      <label>
        <input type="checkbox" value="remember-me"> Remember me
      </label>
    </div>

    <div class="form-actions">
      <%= f.submit "sign_in" , class: "btn btn-lg btn-primary btn-block" %>
    </div>
    <% end %>

    <%= render "devise/shared/links" %>


  </div>


